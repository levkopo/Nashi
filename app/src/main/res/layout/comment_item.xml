<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/content"
	android:padding="10dp">

	<com.levkopo.apps.nashi.widget.Avatar
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:id="@+id/image"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp">

		<com.levkopo.apps.nashi.widget.DefaultTextView
			style="@style/Text.Primary"
			android:textStyle="bold"
			android:id="@+id/name"/>

		<com.levkopo.apps.nashi.widget.ExpandableTextView
			style="@style/Text.Secondary.Small"
			android:layout_marginLeft="5dp"
			android:id="@+id/text"/>

		<com.levkopo.apps.nashi.widget.AttachmentsView
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:id="@+id/attachments"/>

	</LinearLayout>

</LinearLayout>

